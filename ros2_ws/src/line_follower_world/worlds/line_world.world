<?xml version="1.6" ?>
<sdf version="1.6">
  <world name="line_world">
    <gravity>0 0 -9.8</gravity>

    <include>
      <uri>model://ground_plane</uri>
    </include>

    <include>
      <uri>model://sun</uri>
